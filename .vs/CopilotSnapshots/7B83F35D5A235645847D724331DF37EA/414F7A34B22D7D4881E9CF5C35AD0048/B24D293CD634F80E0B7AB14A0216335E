using System;
using MtgChatBotPrototype.Services;
using MtgChatBotPrototype.Models;

namespace FancyMCP;

public class MtgAiService
{
    private readonly DeckAiService _deckAiService;

    public MtgAiService(DeckAiService deckAiService)
    {
        _deckAiService = deckAiService;
    }

    public async Task<List<MtgCard>> UseDeckAiService(string message)
    {
        // Example usage of DeckAiService
        return await _deckAiService.QueryOpenAiAsync(message);
    }
}
